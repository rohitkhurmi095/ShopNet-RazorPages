@page
@model ShopNet.Web.Pages.Categories.EditModel
@{
}


<form method="POST" style="width:40%;">

    <!-- Pass id as hidden field for Update-->
    <input type="hidden" asp-for="@Model.Category.Id" />

    <div class="border p-3 mt-4">
        <div class="row p-2">
            <h2 class="text-primary pl-3">Edit Category</h2>
            <hr />
        </div>

        <!-- Name -->
        <div class="mb-3">
            <label asp-for="@Model.Category.Name"></label>
            <input asp-for="@Model.Category.Name" class="form-control" />

            <!--Validation Message-->
            <span asp-validation-for="@Model.Category.Name" class="text-danger"></span>
        </div>

        <!--Validation-Summary-->
        <!--<div asp-validation-summary="All" class="text-info"></div>-->

        <button type="submit" class="btn btn-primary" style="width:150px;">Update</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:150px;">Back</a>
    </div>

</form>



@section Scripts{

    <!--Client Side Validations-->
    <!-- Including jquery.validate & jquery.validate.unobtrusive as Partial Veiw for Scripts-->
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}